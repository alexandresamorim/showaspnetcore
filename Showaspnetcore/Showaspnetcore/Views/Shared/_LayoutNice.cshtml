<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resultado Fácil</title>

    <!-- Bootstrap CSS -->
    <link href="~/theme/niceadmin/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/theme/niceadmin/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/theme/niceadmin/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/theme/niceadmin/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/theme/niceadmin/css/style.css" rel="stylesheet">
    <link href="~/theme/niceadmin/css/style-responsive.css" rel="stylesheet" />

    @RenderSection("styles", required: false)

</head>
<body>
    <section id="container" class="">
        <!--header start-->
        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Alternar navegação" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="logo">Resultado <span class="lite">Admin</span></a>
            <!--logo end-->

            <div class="nav search-row" id="top_menu">
                <!--  search form start -->
                <ul class="nav top-menu">
                    <li>
                        <form class="navbar-form">
                            <input class="form-control" placeholder="Search" type="text">
                        </form>
                    </li>
                </ul>
                <!--  search form end -->
            </div>

            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">

                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        @await Html.PartialAsync("_LoginPartial")
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>

        </header>
        <!--header end-->
        <!--sidebar menu start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a class="" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="icon_house_alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_document_alt"></i>
                            <span>Cadsatros</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a asp-area="Admin" asp-controller="Pacientes" asp-action="Index">Paciente</a></li>
                            <li><a asp-area="Admin" asp-controller="Exames" asp-action="Index">Exames</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_desktop"></i>
                            <span>Laudos</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a asp-controller="Resultado" asp-action="Index">Pesquisar Laudos</a></li>
                            <li><a asp-controller="Resultado" asp-action="Create">Adicionar Laudos</a></li>
                        </ul>
                    </li>

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <ol class="breadcrumb">
                            @if (IsSectionDefined("Breadcrumbs"))
                            {
                                RenderSection("Breadcrumbs");
                            }
                        </ol>
                    </div>
                </div>

                @RenderBody()
            </section>
        </section>
    </section>
    <!-- javascripts -->
    <script src="~/theme/niceadmin/js/jquery.js"></script>
    <script src="~/theme/niceadmin/js/bootstrap.min.js"></script>
    <!-- nice scroll -->
    <script src="~/theme/niceadmin/js/jquery.scrollTo.min.js"></script>
    <script src="~/theme/niceadmin/js/jquery.nicescroll.js" type="text/javascript"></script>
    <!-- jquery validate js -->
    <script type="text/javascript" src="~/theme/niceadmin/js/jquery.validate.min.js"></script>

    <!-- custom form validation script for this page-->
    <script src="~/theme/niceadmin/js/form-validation-script.js"></script>
    <!--custome script for all page-->
    <script src="~/theme/niceadmin/js/scripts.js"></script>



    @RenderSection("scripts", required: false)
</body>
</html>
