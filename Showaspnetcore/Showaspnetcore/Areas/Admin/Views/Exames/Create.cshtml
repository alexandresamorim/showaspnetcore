@model Exame
@{
    Layout = "_LayoutNice";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Cadastro de Exames
            </header>
            <div class="panel-body">
                <div class="form">
                    <form asp-action="Create" id="demo-form2" data-parsley-validate class="form-validate form-horizontal">
                        <div class="form-group ">
                            <label class="control-label col-lg-2">Exame <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input asp-for="Descricao" class="form-control" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Salvar</button>
                                <a asp-controller="Exames" asp-action="Index" class="btn btn-default">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

@section Breadcrumbs {
    <li><i class="fa fa-home"></i><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><i class="icon_documents_alt"></i><a asp-controller="Exames" asp-action="Index">Exames</a></li>
    <li><i class="icon_folder-add_alt"></i>Novo exame</li>
}